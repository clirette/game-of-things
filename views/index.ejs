<% include ./partials/header %>
<% if (reset) { %>
  <div class="alert alert-dismissible alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Success!</strong> All players cleared
    </div>
<% } %>
  <h1>Welcome to Game of Things Helper!</h1>
  <form action="/submit" method="GET">
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <label for="name" class="col-form-label">Name</label>  
        </div>
        <div class="col-sm-6">
          <input type="text" name="name" class="form-control player-name">
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8">
          <button type="submit" class="form-control btn btn-info submit" style="margin-top: 5vh;">Start Playing</button>
        </div>
      </div>
    </div>
  </form>
  <a href="/reset" style="cursor: pointer;">Reset Players</a>
  <script src="js/index.js"></script>
<% include ./partials/footer %>